/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .item {
  margin-top: 35rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 120rpx;
  height: 300rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  border: 3px solid rgb(0, 153, 255);
}

.userinfo-nickname {
  font-size: 48rpx;
  color: black;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
}

.userinfo-nickname::after {
  border: none;
}

.item-name {
  font-size: 40rpx;
  color: black;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
}

/* 图标 */
.item-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  margin-left: 70rpx;
}

.disable {
  color: #888;
}

.item-navigator {
  width: 75%;
  height: 75%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}